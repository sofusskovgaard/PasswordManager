@page "/login"
@model PasswordManager.Web.Pages.Auth.Login

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex">
    <div class="w-50 d-flex flex-column mx-auto my-5 p-5">
        <h5 class="card-title mb-0">login</h5>
        <small class="d-block mb-3 text-muted">don't have an account? <a asp-page="Register">register here</a>.</small>
        <form method="post" asp-page-handler="login" class="d-flex flex-column text-left">
            <div class="form-group">
                <input type="text" asp-for="LoginForm.Email" class="form-control" placeholder="email"/>
                <small class="text-muted">enter your email address.</small>
            </div>
            <div class="form-group">
                <input type="password" asp-for="LoginForm.Password" class="form-control" placeholder="password"/>
                <small class="text-muted">enter your password.</small>
            </div>
            <div class="w-100 d-flex align-items-center justify-content-between form-group ml-auto mb-0">
                <div class="form-check">
                    <input type="checkbox" asp-for="LoginForm.StayLoggedIn" class="form-check-input"/>
                    <label asp-for="LoginForm.StayLoggedIn" class="form-check-label">trust device for 30 days</label>
                </div>
                <button class="btn btn-primary ml-3">login</button>
            </div>
        </form>
    </div>
</div>
